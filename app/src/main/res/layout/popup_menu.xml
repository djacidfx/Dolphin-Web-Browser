<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_tab"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:text="New tab"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/private_tab"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Incognito Tab"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/bookmarks"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Bookmarks"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/history"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="History"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/download"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Downloads"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/find"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Find in page"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/copy"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Copy link"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Share"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:text="Settings"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/control_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#ffdfdfdf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/actionBarSize">

                <LinearLayout
                    android:id="@+id/web_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/previous"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:tint="@color/Black"
                        app:srcCompat="@drawable/iv_web_left" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/bookmark_image"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/iv_unbookmark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/web_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/iv_web_home"
                        android:tint="@color/Black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/web_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:tint="@color/Black"
                        app:srcCompat="@drawable/iv_right_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
